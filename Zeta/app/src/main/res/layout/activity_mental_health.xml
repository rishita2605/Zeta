<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MentalHealth">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/reem_kufi"
            android:gravity="center"
            android:text="Mental Healthcare Services"
            android:textColor="#000000"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oxylocfield"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:gravity="center"
                android:shadowColor="#0C0C0C"
                android:text="Location : Bangalore"
                android:textColor="#0C0C0C"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/oxychangeloc"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="C H A N G E   L O C A T I O N"
            app:cornerRadius="40dp" />

        <TextView
            android:id="@+id/mentout"
            android:layout_width="match_parent"
            android:layout_height="512dp"
            android:fontFamily="@font/reem_kufi"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>