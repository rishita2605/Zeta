<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/reem_kufi"
                    android:gravity="left|center_vertical"
                    android:text="Look for resources  that can help you get access to oxygen cylinders and connect to volunteers, hospitals nearby."
                    android:textColor="#0C0C0C"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginBottom="15sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/reem_kufi"
                    android:text="N E E D   H E L P ?"
                    android:textSize="11sp"
                    app:cornerRadius="40dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="223dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gethelp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/help" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:fontFamily="@font/reem_kufi"
                    android:gravity="right"
                    android:text="Let others who need  help know that you are available to help others and make a difference in your community."
                    android:textColor="#0B0A0A"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="174dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="45sp"
                    android:text="W A N T   T O   H E L P?"
                    android:textSize="11sp"
                    app:cornerRadius="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>