<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/reem_kufi"
            android:gravity="center"
            android:text="Sign Up to Volunteer"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reem_kufi"
            android:gravity="center"
            android:text="Or Login here"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:text="Name:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:inputType="textPersonName"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:text="Location:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:inputType="textPersonName"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:text="Email-ID:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:inputType="textPersonName"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:text="Password:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"
                android:textColor="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40sp"
            android:layout_marginLeft="40sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView17"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:text="Phone No.:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/reem_kufi"
                android:gravity="left|center_vertical"
                android:inputType="textPersonName" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/reem_kufi"
            android:gravity="center"
            android:text="What can you help with?"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:foregroundGravity="left"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="156dp"
                android:layout_height="50sp"
                android:fontFamily="@font/reem_kufi"
                android:text="Blood Donation"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reem_kufi"
                android:text="Oxygen Cylinders"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:foregroundGravity="left"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="225dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:text="Financial Help"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="205dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:fontFamily="@font/reem_kufi"
                android:text="Food Donation"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="40sp"
            android:layout_marginRight="40sp"
            android:fontFamily="@font/reem_kufi"
            android:text="S I G N   U P"
            android:textSize="16sp"
            app:cornerRadius="40dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>